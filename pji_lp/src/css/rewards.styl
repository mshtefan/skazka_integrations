.gift {
    position: relative;

    &__active {
        &:after {
            content: '';
            position: absolute;
            left: -10px;
            top: -10px;
            bottom: 10px;
            right: 10px;
            display: block;
            background: white;
            border: 1px solid rgba(0, 0, 0, 0.3);
            box-shadow: 1px 1px 1px 1px black;
        }
    }

    &__image {
        height: 214px;
        object-fit: cover;
        object-position: center;
        border-radius: 5px;
        z-index: -1;
    }

    &__gradient{
        position: relative;
        display: block;
    }

    &__gradient::after{
        display: block;
        position: absolute;
        background-image: -moz-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,0.35) 90%);
        background-image: -webkit-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,0.35) 90%);
        background-image: -o-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,0.35) 90%);
        background-image: -ms-linear-gradient(top, rgba(0,0,0,0) 70%, rgba(0,0,0,0.35) 90%);
        background-image: linear-gradient(to bottom, rgba(0,0,0,0) 70%, rgba(0,0,0,0.35) 90%);
        left:0;
        right:0;
        bottom: -1px;
        height: 100%;
        content: ''; 
    }

    &__name {
        text-align: center;
        position: absolute;
        top: 170px;
        color: white;
        font-family: 'Knockout';
        text-shadow: 1px 1px rgba(0, 0, 0, 0.2);
        width: 100%;
        font-size: 24px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    &__redeem {
        cursor: pointer;        
        line-height: 55px;
        border-radius: 5px;
        background-color: #D9D9D9;
        display: block;
        font-family: 'Knockout';
        color: #9c9c9c;
        text-align: center;
        font-size: 24px;
        margin-top: 7px;
        text-decoration: none;
        transition: background .2s, color .2s;

        +above(700px) {
            &:hover {
                background: #117959;
                color: white;
            }
        }

        &-active {
            background: #117959;
            color: white;
        }
        &-available {
            background: #0f9675;
            color: white;
        }
    }
}

.owl-next, .owl-prev {
    background-image: url('data:image/png;base64,');
    background-repeat: no-repeat;
    width: 19px;
    height: 100%;
    background-size: contain;
    background-position-y: 50%;
    position: absolute;
    right: 0;
    top: 0;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    background-color: rgba(0, 0, 0, 0.2);
    cursor: pointer;
}

.owl-prev {
    right: auto;
    left: 0;
    background-image: url('data:image/png;base64,');
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
}

.rewards__header {
    +below(700px) {
        margin: 80px 40px 20px 20px;
    }

    font-family: 'Changa One';
    font-size: 48px;
    margin: 80px 40px 20px 40px;
    +below(550px) {
        font-size: 24px;
    }
}

.redeem__image {
    display: inline-block;
    width: 35%;
    max-width: 250px;
    border: 1px solid rgba(0, 0, 0, 0.2)

    +below(550px) {
        width: 100%;
    }
}

.redeem__text {
    width: "calc(65% - %s - 6px)" % 40px;
    display: inline-block;
    vertical-align: top;
    margin-left: 40px;

    +below(1030px) {
        margin-left: 0px;
        display: block;
        width: auto;
        margin-top: 20px;
    }

    +below(550px) {
        margin-left: 0;
        width: 100%;
        margin-top: 20px;
    }

    &-name {
        font-size: 32px;
        font-family: 'Knockout';
        +below(550px) {
            font-size: 24px;
        }
    }

    &-descr {
        +below(550px) {
            font-size: 16px;
        }
        font-size: 24px;
        font-family: 'Knockout';
        margin-top: 20px;
    }

    &-points {
        font-size: 32px;
        font-family: 'Knockout';
        color: #bf151f;
        +below(550px) {
            font-size: 24px;
        }
    }
}